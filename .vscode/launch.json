{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Next.js",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/node_modules/.bin/next",
            "args": [
                "dev"
            ],
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": null,
            "runtimeArgs": [
                "--nolazy"
            ],
            "env": {
                "NODE_OPTIONS": "--inspect"
            },
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "name": "Debug Alfa Helper",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/debug-alfa.js",
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal"
        }
    ]
}